#!/usr/bin/env ruby

require 'richard'


def print_usage
  puts <<-EOS
Usage:
  richard command [user_id]

Commands:
  list - List current queue
  grab - Add yourself to the queue
  release - Removes you from the queue
  force_release - Force releases another user.  The user_id must be provided.
EOS
end


config = Richard::ConfigRepository.find_or_create
server = Richard::Server.new(config.url, config.api_key)

case ARGV[0]
when 'list'
  server.list

when 'grab'
  server.grab

when 'release'
  server.release

when 'force_release'
  user_id = ARGV[1].to_i

  if user_id > 0
    server.force_release(user_id)
  else
    print_usage
  end

else
  print_usage
end
